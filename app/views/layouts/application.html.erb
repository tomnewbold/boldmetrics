<!DOCTYPE html>
<html>
<head>
  <title>Boldmetrics</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="container">
      <nav class="">
     <ul class="nav nav-pills">
      <li><%= link_to "Home", welcome_index_path, :class => "btn btn-default navbar-btn" %></li>
      <li><%= link_to "About", welcome_about_path, :class => "btn btn-warning navbar-btn" %></li>
      <li><%= link_to "Applications", applications_path, :class => "btn btn-info navbar-btn" %></li>
      <% if user_signed_in? %>
    
   <li><%= link_to 'Edit profile', edit_user_registration_path, :class => "btn btn-primary navbar-btn" %></li>
   <li> <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => "btn btn-danger navbar-btn"  %></li>
   <li><strong><%= current_user.email %></strong></li>
 <% else %>
   <li><%= link_to "Sign Up", new_user_registration_path, :class => "btn btn-primary navbar-btn" %></li>
   <li><%= link_to "Sign In", new_user_session_path, :class => "btn btn-success navbar-btn"   %></li>
 <% end %>
   </ul>
 </nav>

   <% if flash[:notice] %>
       <div class="alert alert-success">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:notice] %>
       </div>
     <% elsif flash.now[:alert] %>
       <div class="alert alert-danger">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash.now[:alert] %>
       </div>
     <% elsif flash[:alert] %>
       <div class="alert alert-warning">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:alert] %>
       </div>
     <% end %>
<%= yield %>
    </div>
</body>
</html>
